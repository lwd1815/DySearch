<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#000"
>

    <RelativeLayout
        android:id="@+id/dy_cut_tool_rl"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#000"
        android:elevation="1dp"
    >
        <TextView
            android:id="@+id/dy_cut_title_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:singleLine="true"
            android:layout_centerInParent="true"
            android:text="请调整选框再次搜索"
            android:textColor="@color/deep_colorW"
            android:textSize="15sp"/>
        <TextView
            android:id="@+id/dy_cut_back"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:drawableLeft="@mipmap/dy_search_back_white"
            android:paddingLeft="20dp"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_marginTop="?attr/actionBarSize"
        android:padding="8dp"
        android:id="@+id/dy_cutphoto_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <com.theartofdev.edmodo.cropper.CropImageView
            android:transitionName="sharedView"
            android:id="@+id/dy_cut_coreim"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:cropBorderLineThickness="0dp"
            app:cropBorderCornerColor="@color/deep_main_color"
            app:cropBorderCornerThickness="2dp"
            app:cropBorderCornerOffset="2dp"
            app:cropGuidelines="onTouch"/>

        <RelativeLayout
            android:id="@+id/dy_cut_done"
            android:background="@color/deep_main_color"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
        >
            <Button
                android:visibility="gone"
                android:layout_marginLeft="50dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:id="@+id/dy_cutButton_fail"
                android:background="@mipmap/dy_search_icon_cutphoto_fail"
            />
            <Button
                android:visibility="gone"
                android:layout_marginRight="50dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:id="@+id/dy_cutButton_succeed"
                android:background="@mipmap/dy_search_icon_cutphoto_succeed"
            />
            <TextView
                android:layout_centerInParent="true"
                android:text="确定"
                android:textColor="@color/deep_colorW"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>

    </LinearLayout>
    <tao.deepbaytech.com.dayupicturesearch.custom.MetaballView
        android:id="@+id/dy_metaball_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"/>
</RelativeLayout>
