<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/imgsearch_most_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.TestActivity">
    <RelativeLayout
        android:id="@+id/dy_toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#fff"
        android:elevation="1dp"
    >
        <TextView
            android:id="@+id/dy_title_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:singleLine="true"
            android:layout_centerInParent="true"
            android:text="@string/title"
            android:textColor="#191919"
            android:textSize="15sp"/>
        <TextView
            android:id="@+id/dy_back_bar"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:drawableLeft="@mipmap/activity_back"
            android:paddingLeft="20dp"/>
        <TextView
            android:id="@+id/dy_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="11dp"
            android:drawableTop="@mipmap/img_search_filter_n"
            android:text="@string/filter"
            android:textSize="12sp"
            android:visibility="gone"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/dy_rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/dy_ll_cut_filter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:background="#fff"
        android:orientation="horizontal"
        android:paddingBottom="4dp"
        android:paddingLeft="10dp"
        android:paddingRight="8dp"
        android:paddingTop="4dp">

        <RelativeLayout
            android:layout_width="50dp"
            android:layout_height="50dp">
            <ImageView
                android:id="@+id/dy_crop"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="centerCrop"/>
            <ImageView
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:src="@mipmap/img_search_bianji"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="1dp"
            android:layout_weight="1">

            <tao.deepbaytech.com.dayupicturesearch.custom.MyHorizontalScrollView
                android:id="@+id/dy_srcollview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:scrollbars="none">
                <RadioGroup
                    android:id="@+id/dy_radio_class"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"/>
            </tao.deepbaytech.com.dayupicturesearch.custom.MyHorizontalScrollView>
        </RelativeLayout>
        <tao.deepbaytech.com.dayupicturesearch.custom.DrawableTextView
            android:id="@+id/dy_class_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:drawableLeft="@mipmap/icon_search_have_more"/>
    </LinearLayout>

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/dy_smartrefresh"
        android:background="@color/deep_normal_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/dy_ll_cut_filter">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/dy_rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>

    <RadioGroup
        android:id="@+id/dy_sort_radio"
        android:layout_width="193dp"
        android:layout_height="32dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="28dp"
        android:background="@drawable/imgsearch_sort_backdrop"
        android:orientation="horizontal"
        android:visibility="gone">
        <RadioButton
            android:id="@+id/dy_sort_smile"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:button="@null"
            android:gravity="center"
            android:tag="1"
            android:text="相似度"
            android:textColor="@color/imgsearch_sort_radio_text_color"
            android:textSize="12sp"
        />
        <View
            android:layout_width="1dp"
            android:layout_height="22dp"
            android:layout_gravity="center_vertical"
            android:background="#888888"
        />
        <RadioButton
            android:id="@+id/dy_sort_price"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:button="@null"
            android:drawableRight="@mipmap/search_icon_price_normal"
            android:gravity="center"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:tag="4"
            android:text="@string/category_price"
            android:textColor="@color/imgsearch_sort_radio_text_color"
            android:textSize="12sp"
        />
    </RadioGroup>

    <Button
        android:id="@+id/dy_top_btn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_above="@+id/feedback_btn"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="20dp"
        android:background="@mipmap/img_top"
        android:gravity="center"
        android:visibility="gone"
    />
    <Button
        android:id="@+id/dy_feed_btn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="120dp"
        android:visibility="gone"
        android:layout_marginRight="20dp"
        android:background="@mipmap/img_feedback"
        android:gravity="center"
    />

    <FrameLayout
        android:id="@+id/dy_progress_fy"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
        />
    </FrameLayout>
    </RelativeLayout>
</RelativeLayout>
